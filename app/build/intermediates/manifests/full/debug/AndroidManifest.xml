<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.androidtown.hyme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.androidtown.hyme.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.androidtown.hyme.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.androidtown.hyme.SpeechActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.androidtown.hyme.LogActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.androidtown.hyme.MeetingRoomActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.androidtown.hyme.CreateRoomActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="org.androidtown.hyme.SpeechDetailActivity" />
    </application>

</manifest>
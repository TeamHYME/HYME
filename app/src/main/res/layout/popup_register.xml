<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_reg"
    android:layout_width="330dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:paddingLeft="5dp"
    android:background="#ffffff">

    <!-- Empty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"></LinearLayout>

    <!-- Register title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/cleanBlue"
            android:text="@string/popup_register_title"/>
    </LinearLayout>

    <!-- id -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/popup_register_id"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_register_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/title"
            android:textSize="20dp"
            android:layout_weight="4"
            android:maxLength="10" />

        <Button
            android:id="@+id/bt_register_id_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/popup_register_id_confirm"
            android:layout_weight="2"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <!-- password -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/popup_register_pw"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_register_pw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/title"
            android:layout_weight="5"
            android:hint="@string/popup_register_pw_msg"
            android:maxLength="10"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!-- confirm password -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/popup_register_pw_confirm"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_register_pw_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/title"
            android:layout_weight="5"
            android:maxLength="10"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!-- Empty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"></LinearLayout>

    <!-- name or nickname -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/popup_register_name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_register_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/title"
            android:textSize="20dp"
            android:layout_weight="5"
            android:maxLength="10" />
    </LinearLayout>


    <!-- phone number -->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="8"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/popup_register_phone_num"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ed_register_phone_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/title"
            android:textSize="20dp"
            android:layout_weight="5"
            android:maxLength="11" />
    </LinearLayout>

    <!-- Empty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:gravity="end">

        <!-- register -->
        <Button
            android:id="@+id/bt_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/lightBlue"
            android:text="@string/popup_register_confirm"
            android:textColor="@color/cleanBlue" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_register_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/cleanBlue"
            android:text="@string/popup_register_cancel"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!-- Empty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"></LinearLayout>


</LinearLayout>